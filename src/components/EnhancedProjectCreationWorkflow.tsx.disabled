// Validation functions for steps
const validateSkillAssessment = (data: SkillAssessmentData): ValidationResult => {
  const errors: Record<string, string> = {};
  
  if (!data.experienceLevel) {
    errors.experienceLevel = 'Please select your experience level';
  }
  
  if (!data.currentSkills || data.currentSkills.length === 0) {
    errors.currentSkills = 'Please select at least one current skill or area of interest';
  }
  
  if (!data.learningGoals || data.learningGoals.trim().length < 10) {
    errors.learningGoals = 'Please provide learning goals (at least 10 characters)';
  }
  
  if (!data.timeCommitment) {
    errors.timeCommitment = 'Please select your time commitment';
  }
  
  if (!data.learningStyle) {
    errors.learningStyle = 'Please select your preferred learning style';
  }
  
  if (!data.motivation || data.motivation.trim().length < 5) {
    errors.motivation = 'Please share your motivation (at least 5 characters)';
  }
  
  return {
    isValid: Object.keys(errors).length === 0,
    errors
  };
};

const validateTechnologySelection = (data: any): ValidationResult => {
  const errors: Record<string, string> = {};
  
  if (!data.technologies || data.technologies.length === 0) {
    errors.technologies = 'Please select at least one technology';
  }
  
  // Check if at least one language is selected
  const hasLanguage = data.technologies?.some((tech: TechnologyPreference) => tech.category === 'language');
  if (!hasLanguage) {
    errors.languages = 'Please select at least one programming language';
  }
  
  return {
    isValid: Object.keys(errors).length === 0,
    errors
  };
};

const validateRepositorySelection = (data: any): ValidationResult => {
  const errors: Record<string, string> = {};
  
  if (!data.selectedRepositories || data.selectedRepositories.length === 0) {
    errors.repositories = 'Please select at least one repository for your learning journey';
  }
  
  return {
    isValid: Object.keys(errors).length === 0,
    errors
  };
};

const validateProjectPreview = (data: any): ValidationResult => {
  const errors: Record<string, string> = {};
  
  if (!data.projectPreview) {
    errors.project = 'Project preview must be generated before proceeding';
  }
  
  if (!data.confirmed) {
    errors.confirmation = 'Please review and confirm your project before creating it';
  }
  
  return {
    isValid: Object.keys(errors).length === 0,
    errors
  };
};

