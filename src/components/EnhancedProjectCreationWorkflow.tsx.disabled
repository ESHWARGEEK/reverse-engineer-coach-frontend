        {steps.map((step, index) => {
          const isActive = index === currentIndex;
          const isCompleted = completedSteps.includes(step.id);
          const isUpcoming = index > currentIndex && !isCompleted;
          
          return (
            <div key={step.id} className="flex items-center flex-1">
              <div className="flex flex-col items-center">
                <div 
                  className={`
                    w-10 h-10 rounded-full flex items-center justify-center text-sm font-medium
                    transition-all duration-300
                    ${isCompleted ? 'bg-green-600 text-white' : 
                      isActive ? 'bg-blue-600 text-white' : 
                      'bg-gray-700 text-gray-400'}
                  `}
                >
                  {isCompleted ? (
                    <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                    </svg>
                  ) : (
                    <span>{index + 1}</span>
                  )}
                </div>
                <div className="mt-2 text-center">
                  <div className={`text-sm font-medium transition-colors ${
                    isActive ? 'text-white' : 
                    isCompleted ? 'text-green-400' : 
                    'text-gray-500'
                  }`}>
                    {step.title}
                  </div>
                  <div className="text-xs text-gray-500 mt-1">
                    {step.description}
                  </div>
                  {step.estimatedTime && (
                    <div className="text-xs text-gray-600 mt-1">
                      ~{step.estimatedTime} min
                    </div>
                  )}
                </div>
              </div>
              {index < steps.length - 1 && (
                <div className={`flex-1 h-0.5 mx-4 transition-colors ${
                  isCompleted ? 'bg-green-600' : 'bg-gray-700'
                }`} />
              )}
            </div>
          );
        })}
      </div>
    </div>
  );
};

// Main Workflow Component
export const EnhancedProjectCreationWorkflow: React.FC = () => {
  const { showError, showInfo } = useToast();
  const [workflowState, setWorkflowState] = useState<WorkflowState>({
    workflowId: 'enhanced-project-creation',
    currentStep: 'welcome',
    stepData: {},
    completedSteps: [],
    skippedSteps: [],
    progress: 0,
    isProcessing: false,
    processingMessage: undefined,
    errors: {},
    warnings: {},
    canGoBack: false,
    canGoForward: true,
    lastSaved: new Date(),
    version: '1.0.0'
  });

  // Define workflow steps
  const steps: ProjectCreationStep[] = [
    {
      id: 'welcome',
      title: 'Welcome',
      description: 'Get started',
      component: WelcomeStep,
      canSkip: false,
      estimatedTime: 1
    },
    {
      id: 'skill-assessment',
      title: 'Skills & Goals',
      description: 'Tell us about your skills and learning goals',
      component: SkillAssessmentStep,
      validation: validateSkillAssessment,
      estimatedTime: 5
    },
    {
      id: 'technology-selection',
      title: 'Technology',
      description: 'Choose preferences',
      component: TechnologySelectionStep,
      validation: validateTechnologySelection,
      estimatedTime: 3
    },
    {
      id: 'ai-discovery',
      title: 'AI Discovery',
      description: 'Find perfect repositories',
      component: AIDiscoveryStep,
      estimatedTime: 4
    },
    {
      id: 'repository-selection',
      title: 'Repository Selection',
      description: 'Choose your repositories',
      component: RepositorySelectionStep,
      validation: validateRepositorySelection,
      estimatedTime: 2
    },
    {
      id: 'project-preview',
      title: 'Project Preview',
      description: 'Review & customize',
      component: ProjectPreviewStep,
      validation: validateProjectPreview,
      estimatedTime: 3
    }
  ];

  // Save workflow state to localStorage
  useEffect(() => {
    try {
      localStorage.setItem('enhanced-workflow-state', JSON.stringify(workflowState));
    } catch (error) {
      console.warn('Failed to save workflow state:', error);
    }
  }, [workflowState]);

  // Load workflow state from localStorage on mount and handle URL parameters
  useEffect(() => {
    try {
      // Check for URL parameters first
      const urlParams = new URLSearchParams(window.location.hash.split('?')[1] || '');
      const repository = urlParams.get('repository');
      const concept = urlParams.get('concept');
      const source = urlParams.get('source');

      if (repository || concept) {
        // Pre-populate workflow with URL parameters
        const prePopulatedData: any = {};
        
        if (concept) {
          prePopulatedData['skill-assessment'] = {
            learningGoals: [concept],
            preSelectedConcept: concept
          };
        }
        
        if (repository) {
          prePopulatedData['ai-discovery'] = {
            selectedRepository: repository,
            source: source || 'manual'
          };
        }

        setWorkflowState(prev => ({
          ...prev,
          stepData: { ...prev.stepData, ...prePopulatedData }
        }));

        showInfo('Pre-filled Workflow', 
          `Starting with ${concept ? `concept: "${concept}"` : ''}${concept && repository ? ' and ' : ''}${repository ? `repository: "${repository}"` : ''}`
        );
      } else {
        // Try to load saved state
        const savedState = localStorage.getItem('enhanced-workflow-state');
        if (savedState) {
          const parsedState = JSON.parse(savedState);
          setWorkflowState(prev => ({ ...prev, ...parsedState }));
          showInfo('Workflow Resumed', 'Continuing from where you left off');
        }
      }
    } catch (error) {
      console.warn('Failed to load workflow state or URL parameters:', error);
    }
  }, [showInfo]);

  const getCurrentStep = () => {
    return steps.find(step => step.id === workflowState.currentStep) || steps[0];
  };

  const handleNextStep = () => {
    const currentIndex = steps.findIndex(step => step.id === workflowState.currentStep);
    if (currentIndex < steps.length - 1) {
      const nextStep = steps[currentIndex + 1];
      setWorkflowState(prev => ({
        ...prev,
        currentStep: nextStep.id,
        progress: ((currentIndex + 1) / steps.length) * 100,
        canGoBack: true,
        canGoForward: currentIndex + 1 < steps.length - 1,
        errors: {}
      }));
    } else {
      // Workflow complete - redirect to simple project creation for now
      showInfo('Workflow Complete', 'Redirecting to project creation...');
      setTimeout(() => {
        navigate('/');
      }, 1500);
    }
  };

  const handlePreviousStep = () => {
    const currentIndex = steps.findIndex(step => step.id === workflowState.currentStep);
    if (currentIndex > 0) {
      const prevStep = steps[currentIndex - 1];
      setWorkflowState(prev => ({
        ...prev,
        currentStep: prevStep.id,
        progress: ((currentIndex - 1) / steps.length) * 100,
        canGoBack: currentIndex - 1 > 0,
        canGoForward: true,
        errors: {}
      }));
    }
  };

  const handleSkipStep = () => {
    const currentStep = getCurrentStep();
    if (currentStep.canSkip) {
      handleNextStep();
    }
  };

  const handleUpdateStepData = (data: any) => {
    setWorkflowState(prev => ({
      ...prev,
      stepData: {
        ...prev.stepData,
        [prev.currentStep]: data
      }
    }));
  };

  const handleExitWorkflow = () => {
    if (window.confirm('Are you sure you want to exit? Your progress will be saved.')) {
      navigate('/dashboard');
    }
  };

  const currentStep = getCurrentStep();
  const StepComponent = currentStep.component;

  return (
    <div className="min-h-screen bg-gray-900 py-8">
      <div className="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        {/* Header */}
        <div className="flex items-center justify-between mb-8">
          <div>
            <h1 className="text-2xl font-bold text-white">Enhanced Project Creation</h1>
            <p className="text-gray-400 mt-1">AI-guided learning experience</p>
          </div>
          <Button
            onClick={handleExitWorkflow}
            variant="secondary"
            size="sm"
          >
            Exit Workflow
          </Button>
        </div>

        {/* Progress Indicator */}
        <WorkflowProgress 
          steps={steps} 
          currentStep={workflowState.currentStep} 
          completedSteps={workflowState.completedSteps}
          progress={workflowState.progress}
        />

        {/* Step Content */}
        <div className="bg-gray-800 rounded-lg border border-gray-700 p-8 mb-8">
          <StepComponent
            data={workflowState.stepData[workflowState.currentStep] || {}}
            onUpdate={handleUpdateStepData}
            onNext={handleNextStep}
          />
        </div>

        {/* Navigation Controls */}
        <div className="flex items-center justify-between">
          <div>
            {workflowState.canGoBack && (
              <Button
                onClick={handlePreviousStep}
                variant="secondary"
                disabled={workflowState.isProcessing}
              >
                ← Previous
              </Button>
            )}
          </div>

          <div className="flex items-center space-x-4">
            {currentStep.canSkip && (
              <Button
                onClick={handleSkipStep}
                variant="ghost"
                disabled={workflowState.isProcessing}
              >
                Skip Step
              </Button>
            )}
            
            <div className="text-sm text-gray-500">
              Step {steps.findIndex(s => s.id === workflowState.currentStep) + 1} of {steps.length}
            </div>
          </div>
        </div>

        {/* Error Display */}
        {Object.keys(workflowState.errors).length > 0 && (
          <div className="mt-6 bg-red-900/20 border border-red-700/50 rounded-lg p-4">
            <h3 className="text-red-400 font-medium mb-2">Please fix the following errors:</h3>
            <ul className="text-red-300 text-sm space-y-1">
              {Object.entries(workflowState.errors).map(([field, error]) => (
                <li key={field}>• {error}</li>
              ))}
            </ul>
          </div>
        )}
      </div>
    </div>
  );
};